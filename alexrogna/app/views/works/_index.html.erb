<header class="row">
    <div class="column large-12">
        <h3 class="section-header-allcaps">Works</h3>
    </div>
</header>
<main class="row">
    <% @works.each do |work| %>
      <div class="work-place large-12">
        <h4 class="h3"><%= work.company %></h4>
        <p class="header-meta">
            <span><%= work.position %></span> 
            <span class="header-date">
                <%= verbose_date(work.start_date) %> - <%= work.present ? "Present" : verbose_date(work.end_date)%>
            </span>
        </p>
        <div>
            <% if work.description? %>
                Description
            <% else %>
                Key Responsibilities 
            <% end %>
            <br>
            <%= work.key_responsibilities %>
        </div>
        Tools <br>
        <div class="row collapse block-large-1-12 block-medium-1-8 block-tab-1-6 block-mob-1-4">
        
            <% for tech in work.teches.order('order_id ASC') %>
                <div class="column">
                    <div class="techs tech-<%= tech.id %>" data-tech-class="<%= tech.id %>">
                        <% if tech.logo.attached? %>
                            <div class="thumb">
                                <%= image_tag tech.logo,title: "Click to highlight where I've used #{tech.name} in work and education" %>
                            </div>
                        <% end %>
                    </div>
                </div> 
            <% end %>
        </div>
        <% if current_user %>
            <%= link_to edit_work_path(work), title: "Edit" do %>
                <i class="fas fa-pen fa-xs" aria-hidden="true"></i>
            <% end %>
            <%= link_to work, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete" do %>
                <i class="fas fa-times-circle fa-xs" style="color:red"></i>
            <% end %>
        <% end %>
      </div> 
    <% end %> 
    <% if current_user %>
        <%= link_to new_work_path, title: "Add new" do %><i class="fas fa-plus fa-lg" ></i><% end %>
    <% end %>
</main>
<footer class="row"></footer>

