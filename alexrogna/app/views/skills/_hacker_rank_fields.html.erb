<div class="nested-fields">
    <div class="field">
        <%= f.label :cerificate_name %>
        <%= f.text_field :cerificate_name, class: "h-full-width" %>
    </div>
    <div class="field">
        <%= f.label :is_badge %>
        <%= f.check_box :is_badge %>
    </div>
    <div class="field">
        <%= f.label :url %>
        <%= f.text_field :url, class: "h-full-width" %>
    </div>
    <div class="field">
        <%= f.label :badgeorcertificate, class: "h-full-width" %>
        <%= f.file_field :badgeorcertificate %>
    </div>
    <%= link_to_remove_association "Remove Hacker Rank", f %>
</div>