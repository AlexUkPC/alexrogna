<div class="row s-resume__section">
  <div class="column large-12 tab-12">
    <div class="row s-portfolio__header">
        <div class="column large-12">
            <h3>Skills</h3>
        </div>
    </div>
    <div class="row collapse block-large-1-6 block-medium-1-3 block-tab-1-2 block-500-stack folio-list">
      <% @skills.each do |skill| %>
        <div class="column">
        <%= skill.name %>
          <div class="folio-item">  
              <% if skill.books.count()>0 %>              
                  <%= link_to "#modal-#{skill.id}-books", class:"folio-item__thumb" do %>
                      <i class="fas fa-book fa-2x"></i>
                  <% end %>          
              <% end %>
          </div>  
          <div class="folio-item">
              <% if skill.linkedins.count()>0 %>
                  <%= link_to "#modal-#{skill.id}-linkedins", class:"folio-item__thumb" do %>
                      <i class="fab fa-linkedin-in fa-2x"></i>
                  <% end %>          
              <% end %>
          </div>  
          <div class="folio-item">
              <% if skill.hacker_ranks.count()>0 %>
                  <%= link_to "#modal-#{skill.id}-hacker_ranks", class:"folio-item__thumb" do %>
                      <i class="fab fa-hackerrank fa-2x"></i>
                  <% end %>          
              <% end %>
          </div>  
          <div class="folio-item">
              <% if skill.free_code_camps.count()>0 %>
                  <%= link_to "#modal-#{skill.id}-free_code_camps", class:"folio-item__thumb" do %>
                      <i class="fab fa-free-code-camp fa-2x"></i>
                  <% end %>          
              <% end %>
          </div> 
        </div> 
        <div id="modal-<%= skill.id %>-books" hidden>
          <%= render skill.books %>
         </div>
        <div id="modal-<%= skill.id %>-linkedins" hidden>
          <%= render skill.linkedins %>
         </div>
        <div id="modal-<%= skill.id %>-hacker_ranks" hidden>
          <%= render skill.hacker_ranks %>
         </div>
        <div id="modal-<%= skill.id %>-free_code_camps" hidden>
          <%= render skill.free_code_camps %>
         </div>
      <% end %>
    </div>
  </div>
</div>



<br>

<%= link_to 'New Skill', new_skill_path %>
