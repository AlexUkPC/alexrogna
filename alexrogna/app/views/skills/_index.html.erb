<p id="notice"><%= notice %></p>

<h1>Skills</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @skills.each do |skill| %>
      <%= render "layouts/inside_modal",
          title: "",
          modal_class: "skill_modal_#{skill.id}_books" do %>
          <%= render skill.books %>
      <% end %>
      <%= render "layouts/inside_modal",
          title: "",
          modal_class: "skill_modal_#{skill.id}_linkedins" do %>
          <%= render skill.linkedins %>
      <% end %>
      <%= render "layouts/inside_modal",
          title: "",
          modal_class: "skill_modal_#{skill.id}_hacker_ranks" do %>
          <%= render skill.hacker_ranks %>
      <% end %>
      <%= render "layouts/inside_modal",
          title: "",
          modal_class: "skill_modal_#{skill.id}_free_code_camps" do %>
          <%= render skill.free_code_camps %>
      <% end %>
    <% end %>
    <div class="skills">
      <% @skills.each do |skill| %>
      <tr>
        <td><%= skill.name %></td>
        <% if skill.books.count()>0 %>
          <td>
            <%= link_to "#" do %>
              <div class="skill js-modal-open"
                  data-modal-class="skill_modal_<%= skill.id %>_books">
                <i class="fas fa-book fa-2x"></i>
              </div>
            <% end %>          
          </td>
        <% end %>
        <% if skill.linkedins.count()>0 %>        
          <td>
            <%= link_to "#" do %>
              <div class="skill js-modal-open"
                  data-modal-class="skill_modal_<%= skill.id %>_linkedins">
                <i class="fab fa-linkedin-in fa-2x"></i>
              </div>          
            <% end %>
          </td>
        <% end %>
        <% if skill.hacker_ranks.count()>0 %>
          <td>          
            <%= link_to "#" do %>
              <div class="skill js-modal-open"
                  data-modal-class="skill_modal_<%= skill.id %>_hacker_ranks">
                <i class="fab fa-hackerrank fa-2x"></i>
              </div>
            <% end %>          
          </td>
        <% end %>
        <% if skill.free_code_camps.count()>0 %>
          <td>
            <%= link_to "#" do %>
              <div class="skill js-modal-open"
                  data-modal-class="skill_modal_<%= skill.id %>_free_code_camps">
                <i class="fab fa-free-code-camp fa-2x"></i>
              </div>
            <% end %>
          </td>
        <% end %>
        <td><%= link_to 'Show', skill %></td>
        <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
        <td><%= link_to 'Destroy', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </div>
    
  </tbody>
</table>

<br>

<%= link_to 'New Skill', new_skill_path %>
