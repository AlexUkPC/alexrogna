<div class="nested-fields">
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, class: "h-full-width" %>  
    </div>
    <div class="field">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: "h-full-width" %>  
    </div>
    <div class="field">
        <%= f.label :author %>
        <%= f.text_field :author, class: "h-full-width" %>  
    </div>
    <div class="field">
        <%= f.label :publisher %>
        <%= f.text_field :publisher, class: "h-full-width" %>  
    </div>
    <div class="field">
        <%= f.label "Date of publication", class: "h-full-width" %>
        <%= f.date_field :dop %>  
    </div>
    <div class="field">
        <%= f.label :resources_link %>
        <%= f.text_field :resources_link, class: "h-full-width" %>  
    </div>
    <div class="field">
        <%= f.label :github_link %>
        <%= f.text_field :github_link, class: "h-full-width" %>  
    </div>
    <div class="field">
        <%= f.label :cover, class: "h-full-width" %>
        <%= f.file_field :cover %>
    </div>
    <%= link_to_remove_association "Remove Book", f %>
</div>