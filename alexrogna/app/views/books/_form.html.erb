  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_field :publisher %>
  </div>

  <div class="field">
    <%= form.label :dop %>
    <%= form.date_select :dop %>
  </div>

  <div class="field">
    <%= form.label :resources_link %>
    <%= form.text_field :resources_link %>
  </div>

  <div class="field">
    <%= form.label :github_link %>
    <%= form.text_field :github_link %>
  </div>
  <% if book.cover.attached? %>
        <%= image_tag book.cover.variant(resize_to_limit: local_assigns.fetch(:cover_options, [200, 200])) %>
    <% end %>
    <%= form.label :cover %>
    <%= form.file_field :cover %>
  <div class="actions">
    <%= form.submit %>
  </div>
