<section class="books">
  <div>
    <p id="notice"><%= notice %></p>

    <h1>Books</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Subtitle</th>
          <th>Author</th>
          <th>Publisher</th>
          <th>Dop</th>
          <th>Resources link</th>
          <th>Github link</th>
          <th>Cover</th>
          <th>Skill</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.subtitle %></td>
            <td><%= book.author %></td>
            <td><%= book.publisher %></td>
            <td><%= book.dop %></td>
            <td><%= book.resources_link %></td>
            <td><%= book.github_link %></td>
            <td>
              <% if book.cover.attached? %>
                <%= image_tag book.cover %>
              <% end %>
            </td>
            <td><% for skill in book.skills %>
                <%= link_to skill.name, edit_skill_path(skill.id) %> <br>
            <% end %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td>
              <% if is_admin(current_user) %>
                <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% else %>
                <a onClick="alert('You are not an admin!')">Destroy</a>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Book', new_book_path %>
  </div>
</section>