<%= form_with(model: hacker_rank) do |form| %>
  <% if hacker_rank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hacker_rank.errors.count, "error") %> prohibited this hacker_rank from being saved:</h2>

      <ul>
        <% hacker_rank.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :cerificate_name %>
    <%= form.text_field :cerificate_name, class: "h-full-width" %>
  </div>

  <div class="field">
    <%= form.label :is_badge %>
    <%= form.check_box :is_badge %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, class: "h-full-width" %>
  </div>
  <div class="field">
    <%= form.label :badgeorcertificate do %>
    Badge or certificate (on <a href="https://www.hackerrank.com/vlad_rogna" target="_blank">HackerRank</a>->right click->inspect->right click->Edit as SVG->copy all svg tag here) 
    <% end %>
    <%= form.text_area :badgeorcertificate, class: "h-full-width" %>
  </div>

  <div class="field">
    <%= form.collection_check_boxes(:skill_ids, Skill.all, :id, :name) do |b| %>
      <% b.label {b.check_box + b.text} %>
    <% end %>
  </div>
  
  <div class="actions">
    <%= form.submit class: "btn btn--submit h-full-width", disabled: !is_admin(current_user) %>
  </div>
<% end %>
