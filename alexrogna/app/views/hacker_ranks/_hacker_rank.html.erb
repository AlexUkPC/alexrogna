<% if hacker_rank.is_badge? %>
    <div class="column large-2 tab-3 mob-6 certif">    
        <a href="https://www.hackerrank.com/vlad_rogna?hr_r=1" target="_blank">
            <%= raw hacker_rank.badgeorcertificate %>
        </a>
        <% if current_user %>
            <div class="controls">
                <%= link_to edit_hacker_rank_path(hacker_rank), title: "Edit" do %>
                    <i class="fal fa-pen fa-xs" aria-hidden="true"></i>
                <% end %>
                <% if is_admin(current_user) %>
                    <%= link_to hacker_rank, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete" do %>
                        <i class="fal fa-trash-alt fa-xs red"></i>
                    <% end %>
                <% else %>
                    <a onClick="alert('You are not an admin!')" title="Delete"><i class="fal fa-trash-alt fa-xs red"></i></a>
                <% end %>
            </div>
        <% end %>
    </div>
<% else %>
    <% if @badge==true %>
        </div>
        <div class="row modal-popup-skills-hr">
        <div class="column large-12"><h3><i class="far fa-file"></i> Verified Skills</h3></div>
        <% @badge=false %>
    <% end %>
    <div class="column large-2 tab-3 mob-6 badge">
        <a href="https://www.hackerrank.com/vlad_rogna?hr_r=1" target="_blank">
            <%= raw hacker_rank.badgeorcertificate %>
        </a>
        <% if current_user %>
            <div class="controls">
                <%= link_to edit_hacker_rank_path(hacker_rank), title: "Edit" do %>
                    <i class="fal fa-pen fa-xs" aria-hidden="true"></i>
                <% end %>
                <% if is_admin(current_user) %>
                    <%= link_to hacker_rank, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete" do %>
                        <i class="fal fa-trash-alt fa-xs red"></i>
                    <% end %>
                <% else %>
                    <a onClick="alert('You are not an admin!')" title="Delete"><i class="fal fa-trash-alt fa-xs red"></i></a>
                <% end %>
            </div>
        <% end %>
    </div>  
<% end %>
