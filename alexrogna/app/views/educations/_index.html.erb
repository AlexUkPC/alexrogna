<header class="row">
    <div class="column large-12">
        <h3 class="section-header-allcaps">Education</h3>
    </div>
</header>
<main class="row">
    <% @educations.each do |education| %>
       <div class="education-place large-12">
          <h4 class="h3"><%= education.school %></h4>
          <p class="header-meta">
              <span><%= education.location %></span> 
              <span class="header-date">
                  <%= verbose_date(education.start_date) %> - <%= verbose_date(education.end_date) %>
              </span>
          </p>
          <p>
            <%= education.specialization %>
          </p>
          
          <div class="row collapse block-large-1-12 block-medium-1-8 block-tab-1-6 block-mob-1-4">
            <% for tech in education.teches.order('order_id ASC') %>
              <div class="column">
                <div class="techs tech-<%= tech.id %>" data-tech-class="<%= tech.id %>">
                  <% if tech.logo.attached? %>
                    <%= image_tag tech.logo,title: "Click to highlight where I've used #{tech.name} in work and education" %>
                  <% end %>
                </div>  
              </div>  
            <% end %>
          </div> 
          <% if current_user %>
                <%= link_to edit_education_path(education), title: "Edit" do %>
                    <i class="fas fa-pen fa-xs" aria-hidden="true"></i>
                <% end %>
                <%= link_to education, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete" do %>
                    <i class="fas fa-times-circle fa-xs" style="color:red"></i>
                <% end %>
            <% end %>
      </div> 
    <% end %>   
    <% if current_user %>
        <%= link_to new_education_path, title: "Add new" do %><i class="fas fa-plus fa-lg" ></i><% end %>
    <% end %>
</main>