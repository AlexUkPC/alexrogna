<section class="tags">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h1>Tags</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Project</th>
          <th>Skill</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.name %></td>
            
            <td><% for project in tag.projects %>
                <%= link_to project.name, edit_project_path(project.id) %> <br>
            <% end %></td>
            <td><% for skill in tag.skills %>
                <%= link_to skill.name, edit_skill_path(skill.id) %> <br>
            <% end %></td>
            <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
            <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Tag', new_tag_path %>
  </div>
</section>