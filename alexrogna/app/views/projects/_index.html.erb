

<header class="row">
    <div class="column large-12">
        <h3 class="section-header-allcaps">Projects</h3>
    </div>
</header>

<div class="row collapse block-large-1-6 block-medium-1-3 block-tab-1-2 block-500-stack projects-list">
    <% projects.each do |project| %>
        <div class="column project-item">
            <%= link_to "#modal-#{project.id}", class:"thumb" do %>
                <% if project.project_logo.attached? %>
                    <%= image_tag project.project_logo %>
                <% else %>
                    <%= project.name %>
                <% end %>
            <% end %>
            
        </div>
        <div>
            <% if current_user %>
                <%= link_to edit_project_path(project) do %>
                    <i class="fas fa-pen fa-xs" aria-hidden="true"></i>
                <% end %>
                <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-times-circle fa-xs" style="color:red"></i>
                <% end %>
            <% end %>
        </div>
        <div id="modal-<%= project.id %>" hidden>
            <div class="modal-popup">
                <div class="row img">
                    <% if project.cover_image.attached? %>
                        <%= image_tag project.cover_image %>
                    <% end %>
                    <% if project.logo.attached? %>
                        <%= image_tag project.logo, class: "logo" %>
                    <% end %>
                    <% if project.main_tech.attached? %>
                        <%= image_tag project.main_tech, class: "main-tech" %>
                    <% end %>
                </div>

                <div class="row desc ">
                    <h5><%= project.name %></h5>
                    <p><%= project.description %></p>
                    <ul class="tag">
                        <% for tag in project.tags %>
                            <li><%= tag.name %></li>
                        <% end %>
                    </ul>
                </div>
                <div class="links">
                    <div class="row">
                        <div class="column large-6">
                            <%= link_to 'Go to the website', project.url, target: :_blank %>
                        </div>
                        <div class="column large-6">
                            <%= link_to project.github_url, target: :_blankdo do %>
                                <i class="fab fa-github" aria-hidden="true"></i>
                            <% end %>
                            <%= link_to project.docker_url, target: :_blank do %>
                                <i class="fab fa-docker" aria-hidden="true"></i>
                            <% end %>
                        </div>

                    </div>
                </div>
                
                
            </div>
        </div>
    <% end %>
    <% if current_user %>
        <%= link_to new_project_path do %><i class="fas fa-plus fa-lg" ></i><% end %>
    <% end %>
</div>