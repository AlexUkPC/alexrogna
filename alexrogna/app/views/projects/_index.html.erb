

<div class="row s-portfolio__header">
    <div class="column large-12">
        <h3>Projects</h3>
    </div>
</div>

<div class="row collapse block-large-1-6 block-medium-1-3 block-tab-1-2 block-500-stack folio-list">
    <% projects.each do |project| %>
        <div class="column folio-item">
            <%= link_to "#modal-#{project.id}", class:"folio-item__thumb" do %>
                <% if project.project_logo.attached? %>
                    <%= image_tag project.project_logo %>
                <% else %>
                    <%= project.name %>
                <% end %>
            <% end %>
            
        </div>
        <div>
            <% if current_user %>
                <%= link_to edit_project_path(project) do %>
                    <i class="fas fa-pen fa-xs" aria-hidden="true"></i>
                <% end %>
                <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-times-circle fa-xs" style="color:red"></i>
                <% end %>
            <% end %>
        </div>
        <div id="modal-<%= project.id %>" hidden>
            <div class="modal-popup">
                <% if project.cover_image.attached? %>
                    <%= image_tag project.cover_image %>
                <% end %>
    
                <div class="modal-popup__desc">
                    <h5><%= project.name %></h5>
                    <p><%= project.description %></p>
                    <ul class="modal-popup__cat">
                        <% for tag in project.tags %>
                            <li><%= tag.name %></li>
                        <% end %>
                    </ul>
                </div>
                <%= link_to 'Project link', project.url,class:"modal-popup__details" %>
            </div>
        </div>
    <% end %>
    <% if current_user %>
        <%= link_to new_project_path do %><i class="fas fa-plus fa-lg" ></i><% end %>
    <% end %>
</div>