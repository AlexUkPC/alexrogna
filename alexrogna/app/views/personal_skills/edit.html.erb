<section class="personal_skills_form">
  <div class="row">
    <div class="column large-12 tab-8 mob-12 align-center">
        <h1>Editing Personal Skill</h1>

        <%= render 'form', personal_skill: @personal_skill %>

        <div class="row">
          <div class="column">
            <%= link_to 'Back', root_path + "#personal_skills" %>
          </div>
