            <%= link_to 'New Personal Skill', new_personal_skill_path %>
          <% end %>
          </div>
        </div>
    </div>
  </div>
</section>
<section id="personal_skills" class="s-personal_skills target-section">
  <%= render 'personal_skills/index' %>
</section>