<header class="row">
    <div class="column large-12">
        <h3 class="section-header-allcaps">Personal Skills</h3>
    </div>
</header>

<main class="row personal_skills block-large-1-3 block-medium-1-2 block-tab-1-2">
  <% @personal_skills.each do |personal_skill| %>
    <div class="column align-center h-text-center h-add-bottom item" title="<%= personal_skill.description %>">
        <i class='<%= personal_skill.icon %> fa-3x'></i>
        <br>
        <%= personal_skill.skill %>
    </div>
    <div>
        <% if current_user %>
            <%= link_to edit_personal_skill_path(personal_skill), title: "Edit" do %>
                <i class="fas fa-pen fa-xs" aria-hidden="true"></i>
            <% end %>
            <%= link_to personal_skill, method: :delete, data: { confirm: 'Are you sure?' }, title: "Delete" do %>
                <i class="fas fa-times-circle fa-xs" style="color:red"></i>
            <% end %>
        <% end %>
    </div>
  <% end %>
</main>
  <div class="row">
    <% if current_user %>
      <%= link_to new_personal_skill_path, title: "Add new" do %><i class="fas fa-plus fa-lg" ></i><% end %>
    <% end %>
  </div>


<footer class="row"></footer>
