
<div id="preloader">
  <div id="loader"></div>
</div>
<header class="s-header">
  <%= render 'navbar' %>
</header>
<section id="hero" class="s-hero target-section">
  <%= render 'hero', social_icons: @social_icons, user: @user %>
</section>
<main>
  <section id="about" class="s-about target-section">
    <%= render 'about', user: @user %>
  </section>
  <section id="portfolio" class="s-portfolio target-section">
    <%= render 'projects/index', projects: @projects %>
  </section>
  <hr>
  <section id="skills" class="s-resume target-section">
    <%= render 'skills/index' %>
  </section>
  <hr>
  <section id="language_skills" class="s-resume target-section">
    <%= render 'language_skills/index' %>
  </section>
  <hr>
  <section id="work" class="s-resume target-section">
    <%= render 'works/index' %>
  </section>
  <hr>
  <section id="education" class="s-resume target-section">
    <%= render 'educations/index' %>
  </section>
  <hr>
  <section>
    <%= render 'contact', contact_form: @contact_form, user: @user %>
  </section>
  <hr>
</main>
<footer>
  <%= render 'footer', social_icons: @social_icons %>
</footer>




<% if current_user %>
    <p><%= link_to "log out", destroy_user_session_path, method: :delete %></p>
    <p><%= link_to "settings", settings_user_path %></p>
<% else %>
    <p><%= link_to "log in", new_user_session_path %></p>
<% end %>