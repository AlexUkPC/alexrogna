<div class="row">
    <div class="column large-4 medium-6 w-1000-stack s-footer__social-block">
        <ul class="s-footer__social">
            <% social_icons.each do |social_icon| %>
                <li><%= link_to social_icon.link, target: :_blank, title: social_icon.name do %><i class='<%= social_icon.icon %>'></i><% end %></li>
                <% if current_user %>
                    <%= link_to edit_social_icon_path(social_icon) do %><i class="fas fa-pen fa-xs" style="color:green"></i><% end %>
                    <%= link_to social_icon, method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fas fa-times-circle fa-xs" style="color:red"></i><% end %>
                <% end %>
            <% end %>
            <% if current_user %>
                <%= link_to new_social_icon_path do %><i class="fas fa-plus fa-lg" style="color:blue"></i><% end %>
            <% end %>
        </ul>
    </div>

    <div class="column large-7 medium-6 w-1000-stack ss-copyright">
        <span>&copy; Copyright <%= Time.new.year!=2021 ? '2021 - '+Time.new.year.to_s : Time.new.year%> <%= link_to "AlexRogna", root_path %> </span> 
    </div>
</div>

