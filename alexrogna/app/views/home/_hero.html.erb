<div class="bg rellax" data-rellax-speed="-7" style="--background: url(<% if @user.cover_image.attached? %>
        <%=rails_blob_url(@user.cover_image) %>
    <% end %>);">
    <% if current_user %>
        <div class="edit">
            <%= link_to settings_user_path + "#cover_image", title: "Change Cover Image" do %> 
                <i class="fal fa-pen" aria-hidden="true"></i>
            <% end %>
        </div>
    <% end %>
</div>

<div class="row content">
    <div class="column">
        <h1>
            <%= user.salute %>
            <% if current_user %>
                <%= link_to settings_user_path + "#salute", title: "Change Salute" do %> 
                    <i class="fal fa-pen" aria-hidden="true"></i>
                <% end %>
            <% end %>
        </h1>

        <h3>
            <%= user.short_description %>
            <% if current_user %>
                <%= link_to settings_user_path + "#short_description", title: "Change Short Description" do %> 
                    <i class="fal fa-pen fa-xs" aria-hidden="true"></i>
                <% end %>
            <% end %>
        </h3>
        <div class="social">
            <%= render 'social_icons', social_icons: social_icons %>
        </div>
        <div class="add-new">
            <% if current_user %>
                <%= link_to new_social_icon_path, title: "Add new" do %><i class="fal fa-plus-circle fa-lg" ></i><% end %>
            <% end %>
        </div>
    </div>
</div> 

<div class="scroll">
    <a href="#about" class="link smoothscroll" data-turbolinks="false" >
        <span class="arrow">
            <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill:rgba(0, 0, 0, 1);transform:;-ms-filter:"><path d="M18.707 12.707L17.293 11.293 13 15.586 13 6 11 6 11 15.586 6.707 11.293 5.293 12.707 12 19.414z"></path></svg>
        </span>
        <span class="text">Scroll Down</span>
    </a>
</div>




