<header class="row">
    <div class="column large-2">
        <h4 class="icon">
            <i class="fas fa-envelope fa-2x"></i>
        </h4>
    </div>
    <div class="column large-10"> 
       <h3 class="section-header-allcaps"> Donâ€™t hesitate to contact me!</h3>
    </div>
</header>

<main class="row content">

    <div class="column large-7 medium-12">
        <%= render 'contact_forms/form', contact_form: contact_form %>
    </div>

    <div class="column large-4 medium-12">
        <div class="row contact-infos">
            <div class="column large-12 medium-6 tab-12">
                <div class="contact-block">
                    <h5 class="header">
                        Name
                    </h5>
                    <p class="content">
                        <%= user.name %>
                    </p>
                </div> 
            </div>
            <div class="column large-12 medium-6 tab-12">
                <div class="contact-block">
                    <h5 class="header">
                        Address
                    </h5>
                    <p class="content">
                        <%= user.street_number %> <%= user.street_name %>
                        <br>
                        <%= user.city %> 
                        <br>
                        <%= user.post_code %>
                    </p>
                </div> 
            </div>
            <div class="column large-12 medium-6 tab-12">
                <div class="contact-block">
                    <h5 class="header">
                        Email
                    </h5>
                    <p class="content">
                        <a class="mailtoui" href="mailto:<%= user.email %>" title="Email me" ><%= user.email %></a>
                    </p>
                </div> 
            </div>
            <div class="column large-12 medium-6 tab-12">
                <div class="contact-block">
                    <h5 class="header">
                        Phone
                    </h5>
                    <p class="content">
                        <a href="tel:<%= user.phone %>" title="Call me" ><%= user.phone %></a>
                    </p>
                </div> 
            </div>
        </div> 

    </div>
</div>